<%= form_for @task, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Task</legend>

    <div class="control-group">
      <%= f.label :task_name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :task_name, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :description, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :description, :rows => 5, :class => 'text_area' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :due_date, :class => 'control-label' %>
      <div class="controls">
        <%= f.datetime_select :due_date, :class => 'datetime_select', :default => 1.days.from_now, :ampm => true %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :list, :class => 'control-label' %>
      <div class="controls">
        <%= f.select :description, :rows => 5, :class => 'text_area' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', tasks_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
