<%= form_for @task, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Task</legend>

    <div class="control-group">
      <%= f.label :email, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :email, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :task_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :task_id, :class => 'number_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :task_name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :task_name, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :description, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :description, :class => 'text_area' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :due_date, :class => 'control-label' %>
      <div class="controls">
        <%= f.datetime_select :due_date, :class => 'datetime_select' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :priority, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :priority, :class => 'number_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :isDeleted, :class => 'control-label' %>
      <div class="controls">
        <%= f.check_box :isDeleted, :class => 'check_box' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :isDone, :class => 'control-label' %>
      <div class="controls">
        <%= f.check_box :isDone, :class => 'check_box' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', tasks_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
