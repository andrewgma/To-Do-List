<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Email</th>
    <th>Task</th>
    <th>Task name</th>
    <th>Description</th>
    <th>Due date</th>
    <th>Priority</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.email %></td>
    <td><%= task.task_id %></td>
    <td><%= task.task_name %></td>
    <td><%= task.description %></td>
    <td><%= task.due_date %></td>
    <td><%= task.priority %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

