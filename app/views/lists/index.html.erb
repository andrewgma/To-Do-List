<h1>Lists</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.id %></td>
        <td><%= link_to list.name, list_path(list) %></td>
        <td>
          <%= link_to 'Edit', edit_list_path(list), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', list_path(list), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_list_path, :class => 'btn btn-primary' %>
